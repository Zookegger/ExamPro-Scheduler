# Environment Configuration Example
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost                # Use 'localhost' for local dev, 'mysql_db' for Docker
DB_USER=root
DB_PASSWORD=your_password        # Change this to your actual password
DB_NAME=exam_scheduler_db
DB_PORT=3307                     # Use 3307 for local dev, 3306 for Docker

# Server Configuration
PORT=5000
NODE_ENV=development             # development for local, production for Docker

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# WebSocket Configuration
WS_PORT=8080

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password